{
  "openapi": "3.0.0",
  "info": {
    "title": "Road Breakdown Assistance API",
    "version": "1.0.0",
    "description": "API for Road Breakdown Assistance Service"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/signup": {
      "post": {
        "summary": "User signup",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "phone": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
